<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.enfonseca.sqliteprodutoimagemlistview">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdicionarProduto"
            android:label="@string/title_activity_adicionar_produto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListProduct"
            android:label="@string/list_Produto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowProduct"
            android:label="@string/title_activity_show_product"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
